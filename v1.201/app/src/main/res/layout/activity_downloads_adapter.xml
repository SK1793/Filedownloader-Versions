<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    >

        <!-- downloads list -->

        <androidx.cardview.widget.CardView
            android:id="@+id/CVdownloads"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            android:theme="@style/Theme.MaterialComponents.DayNight.NoActionBar"
            app:cardBackgroundColor="#45344A"
            >

            <LinearLayout
                android:id="@+id/LLCardView_DA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/rounded_bg"
                android:padding="2dp"
                >

                <!-- icon -->

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_margin="2dp"
                    >
                    <ImageView
                        android:id="@+id/ivFile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/file"
                        android:contentDescription="@string/file" />

                    <TextView
                        android:id="@+id/tvExtension"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=".ext"
                        android:ellipsize="end"
                        android:ems="6"
                        android:gravity="center"
                        android:textSize="14sp"
                        android:textColor="@color/button_state_color"
                        />

                    <TextView
                        android:id="@+id/tvFileSize_adapterView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 KB"
                        android:textSize="14sp"
                        android:textColor="@color/button_state_color"
                        />

                </LinearLayout>

                <!-- downloads body -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="2dp"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="fill_horizontal"
                        >

                        <TextView
                            android:id="@+id/tvFIlename"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:ellipsize="end"
                            android:ems="10"

                            android:fontFamily="sans-serif-light"
                            android:layout_marginHorizontal="5dp"
                            android:text="FileName"
                            android:textAlignment="center"
                            android:textColor="@color/button_state_color"
                            />


<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="end">

                        <TextView
                            android:id="@+id/tvDownloadPercent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:fontFamily="monospace"
                            android:textAlignment="viewEnd"
                            android:text=""
                            android:textColor="@color/button_state_color"
                            />
</RelativeLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="2dp"
                        >
                        <ImageButton
                            android:layout_width="wrap_content"
                            android:id="@+id/btnResume"
                            android:layout_height="wrap_content"
                            android:minHeight="48dp"
                            android:minWidth="48dp"
                            android:background="@drawable/play"
                            android:backgroundTint="@color/button_state_color"
                            android:layout_marginHorizontal="10dp"
                            android:contentDescription="Resume" />

                        <ImageButton
                            android:id="@+id/btnPause"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minHeight="48dp"
                            android:minWidth="48dp"
                            android:background="@drawable/pause"
                            android:backgroundTint="@color/button_state_color"
                            android:contentDescription="pause Download"
                            android:layout_marginHorizontal="10dp"
                            />
                        <ImageButton
                            android:id="@+id/btnRemove"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minHeight="48dp"
                            android:minWidth="48dp"
                            android:background="@drawable/delete"
                            android:backgroundTint="@color/button_state_color"
                            android:contentDescription="Delete Download" />

                        <ImageButton
                            android:id="@+id/btnOpen"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="@drawable/open"
                            android:contentDescription="open file"
                            android:backgroundTint="@color/button_state_color"
                            android:minWidth="48dp"
                            android:minHeight="48dp" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll3_"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"

                        >
                            <ProgressBar
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:id="@+id/PbDownloadProgress"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:max="100"
                                android:progress="50"
                                />

                        <TextView
                            android:id="@+id/tvLinkMore"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="More"
                            android:textColor="#485AF8"
                            android:layout_gravity="end"
                            android:linksClickable="true"
                            />

                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/CVdeleteCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#777575"
        android:visibility="gone"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="#3A2945"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/button_state_color"
                android:text="Do you want to the File to be delete in Local Storage?" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="start"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <Button
                        android:id="@+id/btnNo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:text="no" />

                    <Button
                        android:id="@+id/btnYes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:text="yes" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#3A2945"
        android:background="@drawable/rounded_bg"
        android:layout_margin="4dp">
        <LinearLayout
            android:id="@+id/llFileDetailsContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone"
            android:padding="3dp"
            >

            <TextView
                android:id="@+id/tvFileUrl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="URL: "
                android:textSize="16sp"
                android:textIsSelectable="true"
                android:textStyle="normal"
                android:lineBreakStyle="normal"
                android:textColor="@color/button_state_color"

                />
            <TextView
                android:id="@+id/tvFileDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Date: "
                android:textSize="16sp"
                android:textIsSelectable="true"
                android:textStyle="normal"
                android:lineBreakStyle="normal"
                android:textColor="@color/button_state_color"
                />
            <TextView
                android:id="@+id/tvFileProgress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="progress: "
                android:textIsSelectable="true"
                android:textStyle="normal"
                android:textColor="@color/button_state_color"
                android:lineBreakStyle="normal"
                />
            <TextView
                android:id="@+id/tvFileLoc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="Location: "
                android:textIsSelectable="true"
                android:textStyle="normal"
                android:lineBreakStyle="normal"
                android:textColor="@color/button_state_color"
                />
            <TextView
                android:id="@+id/tvFileType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="Type: "
                android:textIsSelectable="true"
                android:textStyle="normal"
                android:lineBreakStyle="normal"
                android:textColor="@color/button_state_color"
                />
            <TextView
                android:id="@+id/tvResummable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="Type: "
                android:textIsSelectable="true"
                android:textStyle="normal"
                android:lineBreakStyle="normal"
                android:textColor="@color/button_state_color"
                />
            <TextView
                android:id="@+id/tvFileSize"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="Size: "
                android:textIsSelectable="true"
                android:textStyle="normal"
                android:lineBreakStyle="normal"
                android:textColor="@color/button_state_color"
                />


        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>